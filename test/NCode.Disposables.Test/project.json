{
  "title": "NCode.Disposables.Test",
  "copyright": "Copyright © 2017 NCode Group",
  "description": "Contains NUnit tests for the 'NCode.Disposables' assembly.",
  "language": "en-US",

  // The actual version number is set during the TeamCity build, but in the "project.json"
  // file it MUST be "0.0.0-*" in order for the RegEx to find and replace the value.
  "version": "0.0.0-*",

  "authors": [ "Marcin Polewski" ],

  "buildOptions": {
    "compile": {
      "includeFiles": "../../GlobalAssemblyInfo.cs"
    }
  },

  "testRunner": "xunit",

  "dependencies": {
    "NCode.Disposables": {
      "target": "project"
    },
    "NETStandard.Library": "1.6.1",
    "xunit": "2.2.0-beta5-build3474",
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "Moq": "4.6.38-alpha"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.1.0"
        }
      }
    }
  }

}
